@model ICollection<Product>
@{
    ViewData["Title"] = "Details";
    int order = 0;
}

    <div class="container-fluid">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Book Name</th>
                    <th scope="col">BooksCount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var books in Model)
                {
                    order++;
                    <tr>
                        <th scope="row">@order</th>
                        <td>@books.Name</td>
                        <td>@books.Name.Count()</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
