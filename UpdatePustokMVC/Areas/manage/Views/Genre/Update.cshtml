@model Genre
@{
    ViewData["Title"] = "Update";
}

<form method="post" >
    <div class="mb-3">
        <label asp-for="@Model.Name">Name</label>
        <div class="col-sm-10">
            <input class="form-control" type="hidden" name="Id" value="@Model.Id" asp-for="@Model.Name">
            <span asp-validation-for="@Model.Name" > </span>
        </div>
        <button type="submit" class="btn badge-success">
            Add

        </button>

    </div>
</form>

