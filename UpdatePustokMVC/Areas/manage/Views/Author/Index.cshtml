@model ICollection<Author>
@{
    ViewData["Title"] = "Index";
    int order = 0;
}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Authors</h1>
        <a asp-action="create" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Image</th>
                <th scope="col">BooksCount</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in Model)
            {
                order++;
                <tr>
                    <th scope="row">@order</th>
                    <td>@author.Name</td>
                 
                    <td>@author.Products.Count()</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@author.Id" class="btn btn-warning">Details</a>
                        <a asp-action="delete" asp-route-id="@author.Id" class="btn btn-danger btn-item-delete">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
