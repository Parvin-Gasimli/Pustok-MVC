@model ICollection<Genre>
@{
    ViewData["Title"] = "Index";
}

<h3  class="mb-4">Genre Page </h3>

<div class="d-flex justify-content-between mb-5" >
    <a class="btn btn-black" asp-action="Create">
        Create
    </a>
</div>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Settings</th>

        </tr>
    </thead>
    <tbody>
        @foreach (Genre item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Genre" asp-route-Id="@item.Id" asp-action="Detail" >
                        Detail
                    </a>
                    <a class="btn btn-dark" asp-controller="Genre" asp-route-Id="@item.Id" asp-action="Update">
                        Update

                    </a>
                    <a class="btn btn-danger"  asp-controller="Genre" asp-route-Id="@item.Id" asp-action="Delete" >
                        Delete

                    </a>
                </td>
            </tr>
        }


    </tbody>
</table>

